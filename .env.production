# ======================================
# KBM 2.0 Production Configuration
# ======================================
# IMPORTANT: This file contains sensitive information
# Never commit this file to version control
# Update all values before deployment

# Environment
ENV=production

# Security - REQUIRED: Change this to a unique secure key
# Generate new key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=d2c99888f412d93e8c0fdda106e47917eceabcf25c65155de241950367ba7488

# Database Configuration
# For SQLite (small deployments):
# DATABASE_URI is not used in multi-tenant mode (each tenant has separate DB)
# Master database is always at KBM2_data/master.db

# For PostgreSQL (recommended for production):
# DATABASE_URI=postgresql://username:password@localhost:5432/kbm_master

# For MySQL:
# DATABASE_URI=mysql+pymysql://username:password@localhost:3306/kbm_master

# Application Settings
AUTO_CREATE_SCHEMA=false
PORT=8000

# Flask Settings
FLASK_ENV=production
PYTHONUNBUFFERED=1

# Gunicorn Settings (optional, can be set in entrypoint.sh)
WORKERS=4
TIMEOUT=120
LOG_LEVEL=info

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# File Upload
MAX_CONTENT_LENGTH=16777216

# Security Headers (handled by nginx typically)
# HSTS_MAX_AGE=31536000
# HSTS_INCLUDE_SUBDOMAINS=true

# Rate Limiting (if Flask-Limiter is installed)
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=memory://

# Logging
LOG_LEVEL=INFO
