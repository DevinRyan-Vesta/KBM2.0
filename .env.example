# ======================================
# KBM 2.0 Environment Configuration Template
# ======================================
# Copy this file to .env and update with your values
# DO NOT commit .env files to version control

# Environment (development, production, testing)
ENV=development

# Security - REQUIRED: Generate unique secure key for production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Database Configuration
# Master database is always at KBM2_data/master.db for SQLite
# For PostgreSQL: postgresql://username:password@localhost:5432/kbm_master
# For MySQL: mysql+pymysql://username:password@localhost:3306/kbm_master
# DATABASE_URI=sqlite:///path/to/master.db

# Application Settings
AUTO_CREATE_SCHEMA=true
PORT=5000

# Flask Settings
FLASK_ENV=development
PYTHONUNBUFFERED=1

# Gunicorn Settings (production only)
WORKERS=4
TIMEOUT=120
LOG_LEVEL=info

# Session Configuration (production only)
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# File Upload (16MB)
MAX_CONTENT_LENGTH=16777216

# Rate Limiting
RATELIMIT_ENABLED=false
RATELIMIT_STORAGE_URL=memory://

# Logging
LOG_LEVEL=DEBUG
